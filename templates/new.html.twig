{% extends 'base.html.twig' %}

{% block title %} Formulaire {% endblock %}

{% block body %}

<h1>Formulaire</h1>

{{ form_start(form) }}

    <div class="form-group">
        {{ form_row(form.nom) }}
    </div>
    <div class="form-group">
        {{ form_row(form.prenom) }}
    </div>
    <div class="form-group">
        {{ form_row(form.email) }}
    </div>
    <div class="form-group">
        {{ form_row(form.numtel) }}
    </div>
    <div class="form-group">
        {{ form_row(form.ville) }}
    </div>
    <div class="form-group">
        {{ form_row(form.genre) }}
    </div>
    <div class="form-group">
        {{ form_row(form.age) }}
    </div>

    <div class="form-group">
        <button class="btn" type="submit">Valider</button>
    </div>

{{ form_end(form) }}

{% endblock %}